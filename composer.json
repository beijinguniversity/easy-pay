{
  "name": "javareact/easypay",
  "type": "library",
  "description": "支付宝支付、微信支付一行接入",
  "keywords": [
    "alipay",
    "weixin",
    "支付宝支付",
    "微信支付"
  ],
  "homepage": "https://github.com/javareact/easy-pay",
  "license": "MIT",
  "require": {
    "php": ">=7.1",
    "ext-bcmath": "*",
    "ext-mbstring": "*",
    "ext-json": "*",
    "ext-libxml": "*",
    "ext-simplexml": "*",
    "ext-xml": "*",
    "ext-openssl": "*",
    "guzzlehttp/guzzle": "*"
  },
  "require-dev": {
    "endroid/qrcode": "~1.9",
    "codeception/codeception": "*",
    "phpunit/phpunit": "<9.0.0",
    "mockery/mockery": "^1.3",
    "friendsofphp/php-cs-fixer": "^2.16",
    "monolog/monolog": "^1.25.1"
  },
  "autoload": {
    "psr-4": {
      "Payment\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\EasyPay\\": "tests/"
    }
  }
}
